@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section MiddleContent {
    <h2>Welcome to admin dashboard</h2>
    
}

@model AdminDashboardViewModel

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Admin Dashboard</h1>

    <!-- Users Section -->
    <div class="mb-12">
        <h2 class="text-2xl font-semibold mb-4">Users</h2>
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Username</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@user.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@user.Username</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@user.Email</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <form asp-action="DeleteUser" method="post" class="inline">
                                    <input type="hidden" name="userId" value="@user.Id" />
                                    <button type="submit" class="text-red-600 hover:text-red-900" onclick="return confirm('Are you sure you want to delete this user?')">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Posts Section -->
    <div>
        <h2 class="text-2xl font-semibold mb-4">Posts</h2>
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <table class="min-w-full divide-y divide-gray-200">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">User</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Content</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date Created</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @foreach (var post in Model.Posts)
                    {
                        <tr>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@post.Id</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">@post.User.Username</td>
                            <td class="px-6 py-4 text-sm text-gray-500">@(post.Content?.Length > 50 ? post.Content.Substring(0, 50) + "..." : post.Content)</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@post.DateCreated.ToString("MM/dd/yyyy HH:mm")</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                <form asp-action="DeletePost" method="post" class="inline">
                                    <input type="hidden" name="postId" value="@post.Id" />
                                    <button type="submit" class="text-red-600 hover:text-red-900" onclick="return confirm('Are you sure you want to delete this post?')">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>