@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>

    .containerN {
        max-width: 800px;
        padding: 30px;
        background: #ffffff;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
        border-radius: 12px;
        text-align: center;
    }

    .h1N {
        color: #00aaff;
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    .pN {
        font-size: 1.2rem;
        line-height: 1.8;
        margin-bottom: 15px;
        color: #000000;
    }

    .highlight {
        color: #00aaff;
        font-weight: bold;
    }
</style>


<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
@section MiddleContent {

    <div class="containerN">
        <h1 class="h1N">About Us</h1>
        <p class="pN"><span class="highlight">MeeCon</span> is an innovative platform designed to simplify communication and collaboration. Our mission is to provide seamless and efficient tools for individuals and businesses to connect, share ideas, and achieve their goals together.</p>
        <p class="pN">With MeeCon, you can enjoy a user-friendly interface, advanced features, and a secure environment to enhance productivity and teamwork. Whether you are managing a project, hosting a virtual meeting, or simply staying in touch with your community, MeeCon makes it easy and effective.</p>
        <p class="pN">Our team is dedicated to continuous improvement and innovation, ensuring that MeeCon remains at the forefront of modern communication technology.</p>
        <p class="pN">Join us and experience a smarter way to connect!</p>
    </div>

}
