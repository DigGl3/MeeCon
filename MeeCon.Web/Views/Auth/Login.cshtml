@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <style>

        .formName {
            text-align: left;
        }

        .box {
            align-content:center;
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 400px;
            text-align: left;
        }

        h1 {
            font-size: 28px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-weight: bold;
            margin-bottom: 20px;
            color: #1877f2;
        }

        .inputN {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        button {
            width: 100%;
            padding: 10px;
            background-color: #1877f2;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            button:hover {
                background-color: #155db2;
            }

        .register-link {
            font-size: 16px;
            font-weight: bold;
            color: #1877f2;
            text-decoration: none;
            display: inline-block;
            padding: 10px 20px;
            border-radius: 5px;
            margin-top: 10px;
            background-color: #e7f3ff;
            text-align: center;
        }

        .Centercenter {
            text-align: center;
        }

        .register-link:hover {
            background-color: #d0e1f9;
            text-decoration: underline;
        }
    </style>

@section MiddleContent {

    <div class="box">
        <h1 class="Centercenter">MeeCon</h1>
        <h2 class="Centercenter">Login</h2>

        <form action="@Url.Action("Login", "Auth")" method="post">
            <div class="form-group">
                @Html.AntiForgeryToken()
                <label for="fullName">Username:</label>
                <input type="text" class="inputN" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="inputN" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>

        <a href="Register" class="register-link">Don't have an account? Register</a>
    </div>

}