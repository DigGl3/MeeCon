@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .containerN {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        width: 400px;
        text-align;
        height: 400px;
    }

    h2 {
        color: #007bff;
    }

    .inputN {
        width: 95%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px;
        width: 100%;
        border-radius: 5px;
        cursor: pointer;
        
    }

    .Centercenter {
        text-align: center;
    }

    button:hover {
        background-color: #0056b3;
    }
</style>
@section MiddleContent {
    <div class="containerN">
        <h2 class="Centercenter">Autentificare</h2>
        <form action="@Url.Action("Register", "Auth")" method="post">
            <div class="form-group">
                @Html.AntiForgeryToken()
                <label for="fullName">Username:</label>
                <input type="text" class="inputN" id="username" name="username" required>
            </div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="inputN" id="email" name="email" required>
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" class="inputN" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary">Sign Up</button>
        </form>
        <p style="color:red;">@ViewBag.Error</p>
    </div>
}
