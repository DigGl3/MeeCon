@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section TopBar {
    @Html.Partial("~/Views/Shared/Navigation/_TopBar.cshtml")
}



<style>

    .containerN {
        align-content: center;
        background-color: #0077b6;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        width: 400px;
        height: 400px;
        margin-top: 5%;
        margin-right: auto;
        margin-left: auto;
        text-align: left;
    }

    h2 {
        color: #007bff;
    }

    .inputN {
        width: 95%;
        padding: 10px;
        margin: 10px 0;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        background-color: #00b4d8;
        color: white;
        align-items:center;
        text-align:center;
        border: none;
        padding: 10px;
        width: 100%;
        border-radius: 5px;
        cursor: pointer;
    }

    .Centercenter {
        text-align: center;
    }

    button:hover {
        background-color: #0056b3;
    }
</style>

<div class="containerN">
    <h2 class="Centercenter">Autentificare</h2>
    <form action="@Url.Action("Register", "Auth")" method="post">
        <div class="form-group">
            @Html.AntiForgeryToken()
            <label for="fullName">Username:</label>
            <input type="text" class="inputN" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" class="inputN" id="email" name="email" required>
        </div>
        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" class="inputN" id="password" name="password" required>
        </div>
        <button  type="submit" class="btn btn-primary">Sign Up</button>
    </form>
    <p style="color:red;">@ViewBag.Error</p>
</div>

